<!DOCTYPE html>
<html>
<head>
    <% include ../../common/meta.ejs %>
    <% include ../../common/public.ejs %>
</head>
<body>
<% include ../../common/header.ejs %>

<div class="container">
    <div class="row">
        <% include ../../common/menu.ejs %>

        <div id="content" class="col-lg-10 col-sm-11">
            <div class="page-header">
                <h1>
                    用户管理
                    <small id="parseInfo">

                    </small>
                </h1>
                <div class="operationButton">
                    <div class="btn-group" role="group">
                        <button class="btn btn-primary" id="addData">
                            <span class="glyphicon glyphicon-plus"></span> 添加
                        </button>
                        <button class="btn btn-warning" id="editDate">
                            <span class="glyphicon glyphicon-pencil"></span> 修改
                        </button>
                        <button class="btn btn-danger" id="removeDate">
                            <span class="glyphicon glyphicon-trash"></span> 删除
                        </button>
                    </div>

                    <form id="imageButton" class="inline-block">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary fileinput-button">
                                <span class="glyphicon glyphicon-import"></span> 导入
                                <input id="importData" type="file" name="media" multiple>
                            </button>
                            <button class="btn btn-default" id="exportDate" type="button">
                                <span class="glyphicon glyphicon-export"></span> 导出
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="queryCondition">
                        <form class="form-horizontal query-form" id="queryConditionForm">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="col-md-4 control-label">名称</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" placeholder="根据名称查询" name="name_like" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button class="btn btn-default btn-query" type="submit">
                                        搜索
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div id="datalist"></div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">用户信息</div>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal detail-form" id="detail-form">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">名称</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="name"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">编码</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="code"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">密码</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="password"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">手机号</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="phone"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">邮箱</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="email"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">会员类型</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="type"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">所属组织</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="org"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">所属角色</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="role.name"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">创建时间</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="createTime"></p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">创建者</label>
                                    <div class="col-md-7">
                                        <p class="form-control-static" name="creater.name"></p>
                                    </div>
                                </div>
                            </form>
                            <form class="form-horizontal edit-form default-hidden" id="edit-form">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">名称</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="name" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">编码</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="code" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">密码</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="password" type="password" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">手机号</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="phone" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">邮箱</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="email" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">所属组织</label>
                                    <div class="col-md-7">
                                        <input class="form-control" name="org" type="text" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">所属角色</label>
                                    <div class="col-md-7">
                                        <select name="role" class="form-control" options
                                                optionUrl="/system/auth/role/find" ajaxType="get" codeField="_id" nameField="name">
                                        </select>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn btn-primary btn-small" id="edit_form_save">保存</button>
                                    <button type="button" class="btn btn-default btn-small" id="edit_form_cancel">取消</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../../common/footer.ejs %>
<% include ../../common/script.ejs %>


</body>
</html>
